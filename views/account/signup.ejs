<% layout('layout') -%>
<h1 class="text-center">Inscription</h1>
<main>
  <!--Affichage du message flash de (user.js) si il y a erreur-->
    <% if(errors.length > 0){ %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <%= errors %>
      </div>
    <% } %>
  <form method="post" class="mt-3">
        <div class="mb-3 row text-center">
        <label for="nom" class="col-sm-2 col-form-label text-end">Nom:</label>
        <div class="col-sm-10">
          <input type="text"  class="form-control" id="nom" name="name">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="email" class="col-sm-2 col-form-label text-end">Email:</label>
        <div class="col-sm-10">
          <input type="text"  class="form-control" id="email" name="email">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="password" class="col-sm-2 col-form-label text-end">Password:</label>
        <div class="col-sm-10">
          <input type="password" class="form-control" id="password"  name="password">
        </div>
      </div>
      <input type="submit" class="btn btn-info text-end btn-lg" value="S'inscrire">
  </form>
</main>
