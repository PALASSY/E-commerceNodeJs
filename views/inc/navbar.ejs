<header >
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <div class="container">
      <div class="navbar-header">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
            <a class="navbar-brand" href="#">Mon Ecommerce</a>
        </button>
      </div>

        <ul class="navbar-nav navbar-center">

          <li class="nav-item">
            <a class="nav-link " href="/">Accueil<span class="sr-only">(current)</span></a>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="/about">A propos</a>
          </li>

          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Categories</a>
            <ul class="dropdown-menu" aria-labelledby="dropdown01">
              <!--Boucles pour afficher toutes les categories-->
              <!--Tant que index(categories) < à la longeur les éméménts contenu dans categories[] on increment l'index-->
              <% for(var i = 0; i < categories.length; i++) { %>
              <li><a class="dropdown-item" href="/products/<%= categories[i]._id %>"><%= categories[i].name %></a></li>
              <% } %>
            </ul>
          </li>

          <% if (!user) { %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Inscription/Connexion</a>
            <ul class="dropdown-menu" aria-labelledby="dropdown01">
              <li><a class="dropdown-item" href="/signup">S'inscrire</a></li>
              <li><a class="dropdown-item" href="/login">Se connecter</a></li>
              <li><a class="dropdown-item" href="/logout">Se déconnecter</a></li>
            </ul>
          </li>
          <% } else{ %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="dropdown01" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Hello <%= user.profile.name %></a>
            <ul class="dropdown-menu" aria-labelledby="dropdown01">
              <li><a class="dropdown-item" href="/profile">Profil</a></li>
              <li><a class="dropdown-item" href="/logout">Se déconnecter</a></li>
            </ul>
          </li>
          <% } %>

          <% if(user) { %>
            <li class="nav-item dropdown pt-2">
              <a href="/cart"><i class="fas fa-shopping-cart"></i>
                <span class="badge bg-secondary"><%= cart %></span>
              </a>
            </li>
          <% }else{ %>
            <li class="nav-item dropdown pt-2">
              <a href="/cart"><i class="fas fa-shopping-cart"></i></a>
              <span class="badge bg-secondary">0</span>
            </li>
          <% } %>
        </ul>

      </div>
  </nav>
</header>
